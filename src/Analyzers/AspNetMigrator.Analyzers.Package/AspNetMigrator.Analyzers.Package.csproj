<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>AspNetMigrator.Analyzers</PackageId>
    <Authors>mikerou</Authors>
    <PackageLicenseUrl>https://dotnetcst.visualstudio.com/_git/AspNetMigrator?path=%2FLICENSE.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://dotnetcst.visualstudio.com/DefaultCollection/AspNetMigrator/_git/AspNetMigrator</PackageProjectUrl>
    <RepositoryUrl>https://dotnetcst.visualstudio.com/DefaultCollection/AspNetMigrator/_git/AspNetMigrator</RepositoryUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>AspNetMigrator.Analyzers</Description>
    <PackageReleaseNotes>Initial ASP.NET migration analyzers</PackageReleaseNotes>
    <Copyright>&#169; Microsoft Corporation. All rights reserved.</Copyright>
    <PackageTags>AspNetMigrator.Analyzers, analyzers</PackageTags>
    <NoPackageAnalysis>true</NoPackageAnalysis>

    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);_AddAnalyzersToOutput</TargetsForTfmSpecificContentInPackage>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\AspNetMigrator.Analyzers.CodeFixes\AspNetMigrator.Analyzers.CodeFixes.csproj" />
    <ProjectReference Include="..\AspNetMigrator.Analyzers\AspNetMigrator.Analyzers.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="tools\*.ps1" CopyToOutputDirectory="Always" Pack="true" PackagePath="" />
  </ItemGroup>

  <Target Name="_AddAnalyzersToOutput">
    <ItemGroup>
      <TfmSpecificPackageFile Include="$(OutputPath)\AspNetMigrator.Analyzers.dll" PackagePath="analyzers/dotnet/cs" />
      <TfmSpecificPackageFile Include="$(OutputPath)\AspNetMigrator.Analyzers.CodeFixes.dll" PackagePath="analyzers/dotnet/cs" />
    </ItemGroup>
  </Target>

</Project>
